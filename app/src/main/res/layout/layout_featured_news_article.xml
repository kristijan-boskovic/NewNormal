<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        style="@style/viewParent.headerText"
        android:id="@+id/tv_featured_news_title"
        android:textSize="16sp"
        android:text="@string/news_article_title" />

    <ImageView
        android:id="@+id/iv_featured_news_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/image_featured_news" />

    <TextView
        android:id="@+id/tv_featured_news_description"
        style="@style/miniTitle"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/featuredNewsContentColor"
        android:layout_marginTop="5dp"
        android:text="@string/news_article_description" />
</LinearLayout>