<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newnormal">

    <application
        android:name="com.example.newnormal.util.UserClient"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.newnormal.ui.activities.OfferDetailsActivity" />

        <activity
            android:name="com.example.newnormal.ui.activities.AddEditOfferActivity"
            android:parentActivityName="com.example.newnormal.ui.activities.OldMainActivity" />

        <activity android:name="com.example.newnormal.ui.activities.RegistrationActivity" />

        <activity
            android:name="com.example.newnormal.ui.activities.OldMainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.example.newnormal.ui.activities.LoginActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.example.newnormal.ui.activities.MainActivity"
            android:label="@string/title_news"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>